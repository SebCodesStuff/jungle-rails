<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <h5>A receipt will be sent to <%= @order.email %></h5>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Description</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Total Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><img src=<%= item.image.tiny %> alt ="product image"></td>
        <td><%= item.description %></td>
        <td><%= humanized_money_with_symbol item.item_price %></td>
        <td><%= item.quantity %></td>
        <td><%= humanized_money_with_symbol item.total_price %></td>
      </tr>
      <% end %>
      <tr>
        <td>Order Total</td>
        <td colspan="5"><%= humanized_money_with_symbol @order.total %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
